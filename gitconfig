[color]
    diff = auto
    status = auto
    branch = auto
[user]
    name = Ethan
    email = ethan@eventbrite.com
[diff]
    tool = opendiff
[difftool]
    prompt = false
[alias]
    graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=iso
    svn-diff = !~/dotfiles/bin/git-svn-diff.sh
    lg = log --relative --abbrev-commit --pretty=format:'%C(white)%h %C(cyan)%ci %C(green)by %cn %Creset%s' -20
    st = status --short --branch
    m = checkout master
    difs = diff --stat
    up = pull --rebase
[core]
       excludesfile = ~/.gitignore
       legacyheaders = false
[repack]
       usedeltabaseoffset = true
[merge]
       tool = opendiff
       summary = true
[push]
       default = matching
[pull]
       default = matching
[branch]
	autosetuprebase = always
